#:kivy 1.11.1

<Igra>:
	lopta: nogometna_lopta
	igrac1: igrac1_lopte
	igrac2: igrac2_lopte

	canvas:
		Rectangle:
			source: 'source/teren.png'
			size: 600, 908
			pos: 0, 0

	Label:
		font_size: 30
		center_y: root.height - 21
		right: root.right - 20
		text: "Igrac 2: " + str(root.igrac2.score)

	Label:
		font_size: 30
		center_y: root.height - 21
		x: 20
		text: "Igrac 1: " + str(root.igrac1.score)

	Lopta: 
		id: nogometna_lopta
		center: 300, 454

	Igrac:
		id: igrac1_lopte
		canvas:
			Color:
				rgba: 0,1,0,1
		center: (300, 200)

	Igrac:
		id: igrac2_lopte
		canvas:
			Color:
				rgba: 0,0,1,1
		center: (300, self.parent.height - 242)

<Lopta>:
	size: 50,50
	canvas:
		Ellipse:
			source: 'source/lopta.png'
			pos: self.pos
			size: 50,50

<Igrac>:
	size: 60,60
	canvas: 
		Ellipse:
			pos: self.pos
			size: 60,60

